<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="test_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textColor">#0000ff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="test_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/divider</item>
    </style>

    <style name="test_content_time">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="test_content_primary_large">
        <item name="android:textColor">@color/button_status</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="test_content_primary_middle">
        <item name="android:textColor">@color/button_status</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="test_content_primary_low">
        <item name="android:textColor">@color/button_status</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="test_content_secondary">
        <item name="android:textColor">@color/button_status</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="test_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/button_status</item>
        <item name="android:background">@drawable/button_style</item>
    </style>

    <style name="result_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#0000ff</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="result_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/test_string</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">90dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_style</item>
    </style>

    <style name="test_listview">
        <item name="android:divider">@color/color_black</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">@drawable/listview_style</item>
    </style>

    <style name="popup_show_style">
        <item name="android:windowEnterAnimation">@anim/about_show_animation</item>
        <item name="android:windowExitAnimation">@anim/about_dismiss_animation</item>
    </style>
</resources>