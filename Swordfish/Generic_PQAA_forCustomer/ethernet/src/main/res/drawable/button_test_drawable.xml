<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/color_green" />
            <stroke android:width="2dp" android:color="@color/color_blue" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/color_red" />
            <stroke android:width="2dp" android:color="@color/color_blue" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>

</selector>